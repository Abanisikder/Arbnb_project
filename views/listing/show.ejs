<% layout("/layouts/boilerplate") -%>

<body>
  <div class="container mt-4">

    <!-- Listing Info -->
    <div class="row justify-content-center">
      <div class="col-lg-8 col-md-10 col-12">
        <h2 class="fw-bold mb-3"><%= data.title %></h2>
        <div class="card shadow-sm">
          <img class="card-img-top img-fluid" src="<%= data.image.url %>" alt="Listing Image">
          <div class="card-body">
            <h5>Owned by: <%= data.owner.username %></h5>
            <p><%= data.description %></p>
            <p><b>Price:</b> <%= data.price %></p>
            <p><b>Location:</b> <%= data.location %>, <%= data.country %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Edit/Delete Buttons (only for owner) -->
    <% if(currUser && currUser._id.equals(data.owner._id)) { %>
      <div class="row mt-3 justify-content-center">
        <div class="col-lg-8 col-md-10 col-12 d-flex flex-wrap gap-2">
          <a href="/listings/<%=data._id%>/edit" class="btn btn-dark flex-grow-1 flex-md-grow-0">Edit</a>
          <form method="POST" action="/listings/<%= data._id %>?_method=DELETE" class="d-inline flex-grow-1 flex-md-grow-0">
            <button type="submit" class="btn btn-danger w-100">Delete</button>
          </form>
        </div>
      </div>
    <% } %>

    <hr class="my-4">

    <!-- Review Form -->
    <div class="row justify-content-center">
      <div class="col-lg-8 col-md-10 col-12">
        <% if(currUser) { %>
          <h4>Leave a Comment</h4>
          <form action="/listings/<%=data._id%>/reviews" method="post" novalidate class="needs-validation">
            
            <fieldset class="starability-slot my-3">
              <legend>Rate this:</legend>
              <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked />
              <input type="radio" id="first-rate1" name="review[rating]" value="1" />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input type="radio" id="first-rate2" name="review[rating]" value="2" />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input type="radio" id="first-rate3" name="review[rating]" value="3" />
              <label for="first-rate3" title="Average">3 stars</label>
              <input type="radio" id="first-rate4" name="review[rating]" value="4" />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input type="radio" id="first-rate5" name="review[rating]" value="5" />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>

            <div class="mb-3">
              <label for="comment" class="form-label">Comment:</label>
              <textarea id="comment" rows="4" class="form-control" name="review[comment]" required></textarea>
              <div class="invalid-feedback">Please leave a comment.</div>
            </div>

            <button class="btn btn-outline-dark w-100 w-md-auto">Submit</button>
          </form>
        <% } %>
      </div>
    </div>

    <hr class="my-4">

    <!-- Reviews Section -->
    <div class="row justify-content-center">
      <div class="col-lg-8 col-md-10 col-12">
        <h4>All Reviews</h4>
        <div class="row">
          <% for(review of data.reviews) { %>
            <div class="col-md-6 col-12 mt-3">
              <div class="card review h-100 shadow-sm">
                <div class="card-body">
                  <h6 class="card-title"><%= review.author.username %></h6>
                  <p class="card-text"><%= review.comment %></p>
                  <p class="starability-result" data-rating="<%= review.rating %>"></p>
                </div>
                <% if(currUser && currUser._id.equals(review.author._id)) { %>
                <form method="POST" action="/listings/<%= data._id %>/reviews/<%= review._id %>?_method=DELETE" class="p-2">
                  <button type="submit" class="btn btn-sm btn-danger w-100">Delete</button>
                </form>
                <% } %>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    </div>

  </div>

  <!-- Custom Media Queries -->
  <style>
    /* General responsiveness */
    .card img {
      max-height: 500px;
      object-fit: cover;
    }

    @media (max-width: 992px) {
      h2 {
        font-size: 1.75rem;
      }
    }

    @media (max-width: 768px) {
      h2 {
        font-size: 1.5rem;
      }
      .card img {
        max-height: 400px;
      }
      .btn {
        width: 100%;
        margin-bottom: 0.5rem;
      }
    }

    @media (max-width: 576px) {
      h2 {
        font-size: 1.25rem;
      }
      .card img {
        max-height: 300px;
      }
      .starability-slot label {
        font-size: 0.9rem;
      }
      .starability-result {
        font-size: 1rem;
      }
    }

    /* Star rating responsiveness */
    .starability-slot {
      display: flex;
      flex-wrap: wrap;
      gap: 0.25rem;
    }
    .starability-slot label {
      cursor: pointer;
    }
    .starability-result {
      font-size: 1.2rem;
    }
    @media (max-width: 576px) {
      .starability-result {
        font-size: 1rem;
      }
    }
  </style>
</body>
