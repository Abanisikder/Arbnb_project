<% layout("/layouts/boilerplate") -%>
<div class="row">
    <div class="col-6 offset-3">
        <h2>SingUp for Wonderlust</h2>
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="form-group">
            <label for="username">username:</label>
            <input class="form-control" id="username" name="username" placeholder="Enter user name" type="text" required>
            <div class="invalid-feedback">
              Please provide a username.
            </div>
            <br>
          </div>
           <div class="form-group">
            <label for="email">Email:</label>
            <input class="form-control" id="email" name="email" placeholder="Enter email" type="text" required>
            <div class="invalid-feedback">
              Please provide a email.
            </div>
          </div>
          <br>
          <div class="form-group">
            <label for="password">Password:</label>
            <input class="form-control" id="password" name="password" placeholder="Enter password" type="password" required>
            <div class="invalid-feedback">
              Please provide a strong password.
            </div>
          </div>
          <br>
         <button class="btn btn-success">Signup</button>
        </form>

    </div>
</div>